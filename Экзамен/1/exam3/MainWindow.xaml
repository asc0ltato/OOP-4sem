<Window x:Class="exam3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:exam3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Chocolate"/>
            <Setter Property="Foreground" Value="Coral"/>
            <Setter Property="FontSize" Value="18"/>
        </Style>
        <Style x:Key="ButtonStyleTwo" TargetType="Button">
            <Setter Property="Background" Value="DarkBlue"/>
            <Setter Property="Foreground" Value="DarkGreen"/>
            <Setter Property="FontSize" Value="15"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Menu>
            <MenuItem Header="Счетчик" Click="MenuItem_Click"/>
        </Menu>
        <Button Content="Кнопочка" x:Name="btn1" Style="{DynamicResource ButtonStyle}" Margin="48,74,644,311" Click="btn1_Click"/>
        <Label Content="0" x:Name="Counter" Margin="251,80,387,281"/>
    </Grid>
</Window>
