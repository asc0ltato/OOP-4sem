<Window x:Class="exam2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:exam2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key ="Basic" TargetType="CheckBox">
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Black"/>
        </Style>
        <Style x:Key="BasicTwo" BasedOn="{StaticResource ResourceKey=Basic}" TargetType="CheckBox">
            <Setter Property="Background" Value="Coral"/>
            <Setter Property="Foreground" Value="Brown"/>
        </Style>
    </Window.Resources>
    <Grid>
        <CheckBox Margin="302,78,302,310" Content="fontStyle" Style="{StaticResource Basic}"/>
        <CheckBox Margin="300,217,302,133" Content="fontStyle" Style="{StaticResource BasicTwo}"/>
    </Grid>
</Window>
