<Window x:Class="var1_exam_two.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:var1_exam_two"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="400">
    <Grid Width="380" HorizontalAlignment="Center" Margin="0,0,0,-6">
        <DataGrid x:Name="dataGrid" Margin="0,0,194,10" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Фамилия" Binding="{Binding Path=lastname}" Width="*"/>
                <DataGridTextColumn Header="Курс" Binding="{Binding Path=course}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Загрузить первый курс" Click="LoadData" Margin="214,13,10,114"/>
    </Grid>
</Window>
