<UserControl x:Class="OOP_Lab4_5.UserControl4"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OOP_Lab4_5"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid>
        <Grid MouseDown="Control_MouseDown" PreviewMouseMove="Control_PreviewMouseMove">
            <Button x:Name="button1" Width="50" Height="50" Margin="25" Click="button1_Click" MouseDown="Control_MouseDown" PreviewMouseMove="Control_PreviewMouseMove">
                <Ellipse Width="20" Height="16" Fill="Red" MouseDown="Control_MouseDown" PreviewMouseMove="Control_PreviewMouseMove"/>
        </Button>
        </Grid>
        <RadioButton x:Name="bubbleRad" Content="B." HorizontalAlignment="Left" VerticalAlignment="Bottom" RenderTransformOrigin="-0.011,0.572" Margin="2,0,0,0"/>
        <RadioButton x:Name="tunnleRad" Content="T." HorizontalAlignment="Left" Margin="35,5,0,0" VerticalAlignment="Bottom"/>
        <RadioButton x:Name="directRad" Content="D." HorizontalAlignment="Left" Margin="65,5,0,0" VerticalAlignment="Bottom"/>
    </Grid>
</UserControl>
